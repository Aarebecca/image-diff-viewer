{
  "name": "image-diff-viewer",
  "displayName": "Image Diff Viewer",
  "description": "A VSCode extension for comparing image versions with Git",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:scm",
    "onCommand:imageDiff.compareWithPrevious",
    "onCommand:imageDiff.openScmChanges",
    "onCommand:imageDiff.openAsDiffTool",
    "onCustomEditor:imageDiff.imagePreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "imageDiff.compareWithPrevious",
        "title": "Compare with Previous Version",
        "category": "Image Diff"
      },
      {
        "command": "imageDiff.openScmChanges",
        "title": "Open Changes with Image Diff Viewer",
        "category": "Image Diff"
      },
      {
        "command": "imageDiff.openAsDiffTool",
        "title": "Open as Diff Tool",
        "category": "Image Diff"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "imageDiff.compareWithPrevious",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|webp)$/i",
          "group": "3_compare"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "imageDiff.openScmChanges",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|webp)$/i",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "imageDiff.imagePreview",
        "displayName": "Image Preview with Diff",
        "selector": [
          {
            "filenamePattern": "*.{png,jpg,jpeg,gif,bmp,webp}"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Image Diff Viewer",
      "properties": {
        "imageDiff.defaultDiffTool": {
          "type": "boolean",
          "default": true,
          "description": "Use Image Diff Viewer as default diff tool for images"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/pngjs": "^7.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}
